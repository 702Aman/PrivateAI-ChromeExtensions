{
  "manifest_version": 3,
  "name": "QuickAI",
  "version": "2.0.0",
  "description": "Modern AI assistant with sleek glassmorphism UI, smooth transitions, and multi-provider support (Gemini, ChatGPT, Ollama). Fast, private, and beautiful.",
  "icons": {
    "128": "AIQUICK.png"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "http://localhost:11434/*",
    "http://localhost/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "QuickAI - Click to open"
  },
  "options_ui": {
    "page": "src/settings/settings.html",
    "open_in_tab": true
  }
}
